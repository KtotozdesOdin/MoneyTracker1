@using System.Linq
@model IEnumerable<MoneyTracker1.Models.Category>

<div class="container mt-4">
    <!-- Заголовок с кнопкой добавления -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Категории</h2>
        <a href="@Url.Action("Create", "Categories")" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Добавить категорию
        </a>
    </div>

    <!-- Таблица -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Название</th>
                        <th>Тип</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>

                    
                    @foreach (var item in Model)   
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <span class="badge @(item.Type == "Income" ? "bg-success" : "bg-warning")">
                                    @item.Type
                                </span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Edit", "Categories", new { id = item.Id })"
                                       class="btn btn-sm btn-outline-primary"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       title="Редактировать">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Details", "Categories", new { id = item.Id })"
                                       class="btn btn-sm btn-outline-info"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       title="Просмотр">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Categories", new { id = item.Id })"
                                       class="btn btn-sm btn-outline-danger"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       title="Удалить">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3">
            <i class="fas fa-info-circle me-2"></i>Категории не найдены. Добавьте первую категорию!
        </div>
    }
</div>