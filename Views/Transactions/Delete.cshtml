@model MoneyTracker1.Models.Transaction

@{
    ViewData["Title"] = "Удаление транзакции";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Удаление транзакции</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">Назад к списку</a>
    </div>

    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="card-title mb-0">Подтверждение удаления</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">Вы уверены, что хотите удалить эту транзакцию?</h4>
                <p>Это действие невозможно отменить. Все данные о транзакции будут безвозвратно удалены.</p>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <h6 class="text-muted">Сумма</h6>
                        <p class="h4 @(Model.TransactionType == MoneyTracker1.Models.Enums.TransactionType.Income ? "text-success" : "text-danger")">
                            @Html.DisplayFor(model => model.Amount)
                        </p>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-muted">Дата</h6>
                        <p>@Html.DisplayFor(model => model.Date)</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <h6 class="text-muted">Тип транзакции</h6>
                        <p>
                            @if (Model.TransactionType == MoneyTracker1.Models.Enums.TransactionType.Income)
                            {
                                <span class="badge bg-success">Доход</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Расход</span>
                            }
                        </p>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-muted">Категория</h6>
                        <p>@Html.DisplayFor(model => model.Category.Name)</p>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <h6 class="text-muted">Описание</h6>
                <p class="card-text">@Html.DisplayFor(model => model.Description)</p>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-danger me-md-2">
                        <i class="bi bi-trash"></i> Удалить
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>