@model MoneyTracker1.Models.Transaction

@{
    ViewData["Title"] = "Редактирование транзакции";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Редактирование транзакции</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">Назад к списку</a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Изменение данных транзакции</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Сумма</label>
                            <div class="input-group">
                                <span class="input-group-text">₽</span>
                                <input asp-for="Amount" class="form-control" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Date" class="form-label">Дата</label>
                            <input asp-for="Date" type="date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TransactionType" class="form-label">Тип транзакции</label>
                            <select asp-for="TransactionType" class="form-select">
                                <option value="@MoneyTracker1.Models.Enums.TransactionType.Income">Доход</option>
                                <option value="@MoneyTracker1.Models.Enums.TransactionType.Expense">Расход</option>
                            </select>
                            <span asp-validation-for="TransactionType" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Категория</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                                <option value="">-- Выберите категорию --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Описание</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <button type="submit" class="btn btn-primary me-md-2">
                        <i class="bi bi-save"></i> Сохранить
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}