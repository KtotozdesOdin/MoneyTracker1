@model MoneyTracker1.Models.Transaction

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Детали транзакции</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">Редактировать</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Назад к списку</a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Информация о транзакции</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <h6 class="text-muted">Сумма</h6>
                        <p class="h4 @(Model.TransactionType == MoneyTracker1.Models.Enums.TransactionType.Income ? "text-success" : "text-danger")">
                            @Html.DisplayFor(model => model.Amount)
                        </p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <h6 class="text-muted">Тип транзакции</h6>
                        <p class="h5">
                            @if (Model.TransactionType == MoneyTracker1.Models.Enums.TransactionType.Income)
                            {
                                <span class="badge bg-success">Доход</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Расход</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <h6 class="text-muted">Дата</h6>
                        <p>@Html.DisplayFor(model => model.Date)</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <h6 class="text-muted">Категория</h6>
                        <p>@Html.DisplayFor(model => model.Category.Name)</p>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <h6 class="text-muted">Описание</h6>
                <p class="card-text">@Html.DisplayFor(model => model.Description)</p>
            </div>
        </div>
        <div class="card-footer bg-light">
            <small class="text-muted">ID: @Model?.Id</small>
        </div>
    </div>
</div>